<div class="row">
  <div class="col-md-6 col-md-offset-3" style="margin-bottom: 40px;">
    <h1 style="text-align: center; font-family: 'code-light';"> REGISTER </h1>
    <%= form_for(@user) do |f| %>
     <%= render 'shared/error_messages'%>

     <%= f.label :name, class: "form-label" %>
     <%= f.text_field :name, class: 'form-control' %>

     <%= f.label :university, class: "form-label" %>
     <%= f.text_field :university, class: 'form-control' %>

     <%= f.label :email, class: "form-label" %>
     <%= f.email_field :email, class: 'form-control' %>

     <%= f.label :username, class: "form-label" %>
     <%= f.text_field :username, class: 'form-control' %>

     <%= f.label :password, class: "form-label" %>
     <%= f.password_field :password, class: 'form-control' %>

     <%= f.label :password_confirmation, "Confirmation", class: "form-label"%>
     <%= f.password_field :password_confirmation, class: 'form-control' %>

     <%= f.label :phone, class: "form-label" %>
     <%= f.text_field :phone, class: 'form-control' %>

     <%= f.label :address, class: "form-label" %>
     <%= f.text_field :address, class: 'form-control' %>

     <%= f.label :city, class: "form-label" %>
     <%= f.text_field :city, class: 'form-control' %>

     <%= f.label :state, class: "form-label" %>
     <%= f.text_field :state, class: 'form-control' %>

     <%= f.label :zip, class: "form-label" %>
     <%= f.text_field :zip, class: 'form-control' %>

     <%= f.label :country, class: "form-label" %>
     <%= f.text_field :country, class: 'form-control' %>

     <%= f.label :delegates_count, class: "form-label" %>
     <%= f.number_field :delegates_count, class: 'form-control' %>

     <%= f.submit "Register for UCBMUN XXI", class: "btn btn-primary" %>
    <%end%>
  </div>
</div>
