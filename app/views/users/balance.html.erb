<h1> Finances </h1>
<br></br>

<div class="balance-box">
  <table>
    <th>
      <td> Item </td>
      <td> Qty. </td>
      <cd> Cost </td>
    </th>
    <% @user.charges.each do |charge| %>
      <tr>
        <td> <%= "#{charge[:item]} @ $#{charge[:price]}.00" %></td>
        <td> <%= charge[:quantity] %> </td>
        <td> <%= "#{charge[:price] * charge[:quantity]}.00" %></td>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td><%= "$#{@user.balance}.00" %></td>
    </tr>
  </table>
<h2> Your balance is: <strong> <%= " #{@user.balance}" %> </strong> </h2>

<a class="btn btn-default" href="/charges/new" role="button">Pay with Stripe!</a>
